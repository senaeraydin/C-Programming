#include <stdio.h>
int main(void)
{
	int len = 0; 
	char ch;
	printf("Enter a message: ");
	ch = getchar();

	while (getchar() != 'n') { 
		len++;
		 
	}
	/* while( ch!= 'n'){
	* len++;                   
	* ch=getchar();
	* }
	*/

	printf("Your message was %d characters long.\n", len);
	return 0;
}
